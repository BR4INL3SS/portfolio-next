// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model About {
  id            String  @id
  firstName     String
  lastName      String
  phoneNumber   String
  image         String
  resume        String
  bio           String
  email         String
  heroQuote     String?
  numberOfViews BigInt  @default(0) //hopefully big int :)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Social {
  name         String @id
  url String // Your custom path
  image      String
}

enum JobType {
  partTime
  fullTime
  internship
}

model Experience {
  company             String
  companyUrl          String
  image               String
  title               String
  startDate           DateTime
  isCurrent           Boolean
  endDate             DateTime?
  jobResponsibilities String[]

  @@id([company, title])
}

model Project {  
  title        String @id
  description  String
  technologies String[]
  githubLink   String @unique
  projectLink  String?
}

enum SkillLevel {
  beginner
  intermediate
  expert
}

model SkillCategory {
  name     String  @id
  skills Skill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  name         String        @id
  level      SkillLevel
  image      String
  category   SkillCategory @relation(fields: [categoryId], references: [name], onDelete: Cascade, onUpdate: Cascade)
  categoryId String
}

model Hobby {
  name String @id
  image String
}
